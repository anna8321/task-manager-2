<h1> My Tasks </h1>

<ul>
<% @tasks.each do |task| %>
<li><%= link_to task.title, task_path(task) %>
| <%= link_to "Delete #{task.title}",
            task_path(task.id),
            method: :delete,
            data: { confirm: "Are you sure?" } %></li>
<% end %>
</ul>
<%= link_to "+ Add a new Task", new_task_path %>
